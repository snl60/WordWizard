<Window x:Class="SpellingBeeGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spelling Bee Game" Height="500" Width="500">
    <Grid>
        <!-- Title -->
        <TextBlock Text="Spelling Bee Game" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="10,10,10,0"/>

        <!-- Difficulty Selection -->
        <TextBlock Text="Select Difficulty:" FontSize="16" Margin="10,50,10,0"/>
        <ComboBox x:Name="DifficultyComboBox" Width="150" Height="25" 
                  HorizontalAlignment="Center" Margin="10,80,10,0">
            <ComboBoxItem Content="Easy"/>
            <ComboBoxItem Content="Medium"/>
            <ComboBoxItem Content="Hard"/>
        </ComboBox>

        <Button Content="Start Game" Width="120" Height="30" FontSize="14"
                HorizontalAlignment="Center" Margin="10,120,10,0"
                Click="StartGame_Click"/>

        <!-- Word Pronunciation -->
        <Button Content="ðŸ”Š Hear Word" Width="120" Height="30" FontSize="14" 
                HorizontalAlignment="Center" Margin="10,170,10,0"
                Click="SpeakWord_Click"/>

        <!-- User Input -->
        <TextBox x:Name="UserInput" Width="200" FontSize="16" 
                 HorizontalAlignment="Center" Margin="10,220,10,0"/>

        <Button Content="Check Spelling" Width="150" Height="30" FontSize="16" 
                HorizontalAlignment="Center" Margin="10,270,10,0"
                Click="CheckSpelling_Click"/>

        <!-- Game Status -->
        <TextBlock x:Name="ResultLabel" FontSize="18" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="10,320,10,0"/>

        <TextBlock x:Name="ScoreLabel" Text="Score: 0" FontSize="16" 
                   FontWeight="Bold" HorizontalAlignment="Left" Margin="10,360,10,0"/>

        <TextBlock x:Name="LivesLabel" Text="Lives: 3" FontSize="16" 
                   FontWeight="Bold" HorizontalAlignment="Right" Margin="10,360,10,0"/>

        <!-- Leaderboard -->
        <TextBlock Text="Leaderboard (Top Scores):" FontSize="16" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="10,400,10,0"/>
        <ListBox x:Name="LeaderboardList" Width="300" Height="100"
                 HorizontalAlignment="Center" Margin="10,430,10,0"/>
    </Grid>
</Window>